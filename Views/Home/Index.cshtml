                            <div class="row no-gutters">
                                <div class="col-12">
                                    <div id="divArchitecturalAspect" class="cell float-right btn btn-primary" tooltip="tooltip" data-placement="top" title="" onclick="setAnimalDetailModal('ArchitecturalAspect');" data-dismiss="modal" data-toggle="modal" data-target="#animalDetailModal">Architectural Aspect</div>
                                </div>
                            </div>
                            <div class="row no-gutters middle">
                                <div class="col-12">
                                    <div></div>
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12">
                                    <div id="divOtherImportantAspect" class="cell float-right btn btn-primary" tooltip="tooltip" data-placement="top" title="" onclick="setAnimalDetailModal('OtherImportantAspect');" data-dismiss="modal" data-toggle="modal" data-target="#animalDetailModal">Other Important Aspect</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="animalDetailModal" tabindex="-1" aria-labelledby="animalDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="animalDetailModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="container">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h1 id="h1AnimalDetail"></h1>
                            <ul id="ulAnimalDetail"></ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#animalModal">Back</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let formSearch = document.getElementById("formSearch");

    formSearch.addEventListener("submit", (e) => {
        e.preventDefault();

        let searchBox = document.getElementById("searchBox");

        if (searchBox.value == "") {
            alert("Ensure you input a value!");
        } else {
            // perform operation with form input
            $.getJSON("/Data/AnimalData.json", function (data) {
                data.forEach(item => {
                    if (item.Name.toLowerCase().includes(searchBox.value))
                        $('#divSearch').after('<h1><a href="#" onclick="AnimalModalHeading(\'' + item.Name + '\')" data-toggle="modal" data-target="#animalModal">' + item.Name + '</a></h1><br />');
                });
            });
        }
    });

    function AnimalModalHeading(val) {
        document.getElementById('animalModalLabel').innerText = val;

        $.getJSON("/Data/AnimalData.json", function (data) {
            data.map(item => {
                if (item.Name.toLowerCase() == val.toLowerCase()) {
                    $('#divBiologicalAspect').prop('title', item.BiologicalAspect.Detail);
                    $('#divPhysicalAspect').prop('title', item.ArchitecturalAspect.Detail);
                    $('#divArchitecturalAspect').prop('title', item.PhysicalAspect.Detail);
                    $('#divOtherImportantAspect').prop('title', item.OtherImportantAspect.Detail);
                }
            });
        });
    }

    function setAnimalDetailModal(buttonType) {
        let AnimalName = document.getElementById('animalModalLabel').innerText;

        $.getJSON("/Data/AnimalData.json", function (data) {
            data.map(item => {
                if (item.Name.toLowerCase() == AnimalName.toLowerCase()) {
                    if (buttonType.toLowerCase() == 'BiologicalAspect'.toLowerCase()) {
                        document.getElementById('h1AnimalDetail').innerText = 'Biological Aspect';
                        $('#ulAnimalDetail').empty();
                        item.BiologicalAspect.Links.forEach(val => {
                            $('#ulAnimalDetail').append('<li>' + val.split(': ')[0] + ': <a href=\'' + val.split(': ')[1] + '\'>' + val.split(': ')[1] + '</a></li>');
                        });
                    }
                    else if (buttonType.toLowerCase() == 'PhysicalAspect'.toLowerCase()) {
                        document.getElementById('h1AnimalDetail').innerText = 'Physical Aspect';
                        $('#ulAnimalDetail').empty();
                        item.PhysicalAspect.Links.forEach(val => {
                            $('#ulAnimalDetail').append('<li>' + val.split(': ')[0] + ': <a href=\'' + val.split(': ')[1] + '\'>' + val.split(': ')[1] + '</a></li>');
                        });
                    }
                    else if (buttonType.toLowerCase() == 'ArchitecturalAspect'.toLowerCase()) {
                        document.getElementById('h1AnimalDetail').innerText = 'Architectural Aspect';
                        $('#ulAnimalDetail').empty();
                        item.ArchitecturalAspect.Links.forEach(val => {
                            $('#ulAnimalDetail').append('<li>' + val.split(': ')[0] + ': <a href=\'' + val.split(': ')[1] + '\'>' + val.split(': ')[1] + '</a></li>');
                        });
                    }
                    else if (buttonType.toLowerCase() == 'OtherImportantAspect'.toLowerCase()) {
                        document.getElementById('h1AnimalDetail').innerText = 'Other Important Aspect';
                        $('#ulAnimalDetail').empty();
                        item.OtherImportantAspect.Links.forEach(val => {
                            $('#ulAnimalDetail').append('<li>' + val.split(': ')[0] + ': <a href=\'' + val.split(': ')[1] + '\'>' + val.split(': ')[1] + '</a></li>');
                        });
                    }
                }
            });
        });
    }
</script>