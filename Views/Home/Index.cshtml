<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

<style>

    body {
        background-color: #35abdf;
    }

    .domain-search {
        margin: 0;
        padding: 206px 0;
    }


    .bg-pblue {
        background-color: #35abdf;
    }

    .domain-search .form-title {
        margin-top: 0;
        margin-bottom: 2px;
        color: #fff;
        font-family: "Poppins", sans-serif;
        font-weight: 100;
    }

    .domain-search p {
        color: #B0E7FF;
        margin: 0;
    }


    .domain-search .input-group-addon {
        border: none;
    }

    .domain-search .form-title strong {
        display: block;
    }

    .domain-search .form-control {
        height: 60px;
        border-radius: 0;
        border: none;
    }

        .domain-search .form-control:focus {
            box-shadow: 0px 0px 0px 0px #ffffff !important;
        }

    .input-group .input-group-addon [type="submit"], .input-group .input-group-addon button {
        border: none;
        border-radius: 0;
    }

    .domain-search .btn {
        padding: 0 54px;
        line-height: 60px;
    }


    .btn-primary {
        padding: 0 28px;
        line-height: 54px;
        background: #ff6726;
        color: #fff;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #286090;
            border-color: #204d74;
        }

    .domain-search .input-group + p {
        color: #fff;
        font-size: 15px;
        font-family: "Poppins", sans-serif;
        font-weight: 100;
        margin-top: 15px;
        margin-bottom: 0;
    }

        .domain-search .input-group + p strong {
            margin-right: 40px;
        }

    .DivButtons {
        display: block;
        text-align: right;
    }

    .middle {
        height: 50%;
    }
</style>

<form id="formSearch" class="row domain-search bg-pblue form-horizontal">
    <div class="container">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6 DivButtons">
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#scientistInputModal">Scientist Input Form</button>
                <button type="button" id="btnReviewInputData" class="btn btn-warning" data-toggle="modal" data-target="#reviewInputDataModal">Review Input Data</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1 class="form-title">X-Ray Planet Search</h1>
                <div id="divSearch" class="input-group">
                    <input id="searchBox" type="search" class="form-control">
                    <span class="input-group-btn">
                        <input type="submit" value="Search" class="btn btn-primary">
                    </span>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal -->
<div class="modal fade" id="scientistInputModal" tabindex="-1" aria-labelledby="scientistInputModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="scientistInputModal Label">Scientist Input Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.CurrentField, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.CurrentField, new { htmlAttributes = new { @class = "form-control", type = "text" } })
                            @Html.ValidationMessageFor(model => model.CurrentField, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.FieldOfInterest, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.FieldOfInterest, new { htmlAttributes = new { @class = "form-control", type = "text" } })
                            @Html.ValidationMessageFor(model => model.FieldOfInterest, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdeaType, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.IdeaType, new { htmlAttributes = new { @class = "form-control", type = "text" } })
                            @Html.ValidationMessageFor(model => model.IdeaType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.FieldToCollaborate, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.FieldToCollaborate, new { htmlAttributes = new { @class = "form-control", type = "text" } })
                            @Html.ValidationMessageFor(model => model.FieldToCollaborate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.WhomToCollabWith, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.WhomToCollabWith, new { htmlAttributes = new { @class = "form-control", type = "text" } })
                            @Html.ValidationMessageFor(model => model.WhomToCollabWith, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group clearfix">
                        <button type="submit" id="btnSave" class="btn btn-warning float-left">Submit</button>
                        <button type="button" class="btn btn-warning float-right" data-dismiss="modal">Cancel</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="reviewInputDataModal" tabindex="-1" aria-labelledby="reviewInputDataModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewInputDataModal Label">Scientist Input Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="tblReviewInputData" class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                            <th>@Html.DisplayNameFor(model => model.CurrentField)</th>
                            <th>@Html.DisplayNameFor(model => model.FieldOfInterest)</th>
                            <th>@Html.DisplayNameFor(model => model.IdeaType)</th>
                            <th>@Html.DisplayNameFor(model => model.FieldToCollaborate)</th>
                            <th>@Html.DisplayNameFor(model => model.WhomToCollabWith)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Session["scientistInput"] as List<WebApp.Models.ScientistInputModel>)
                        {
                            @*@Html.HiddenFor(model => item.Empid)*@
                            <tr>
                                <td>@item.Date</td>
                                <td>@item.CurrentField</td>
                                <td>@item.FieldOfInterest</td>
                                <td>@item.IdeaType</td>
                                <td>@item.FieldToCollaborate</td>
                                <td>@item.WhomToCollabWith</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="animalModal" tabindex="-1" aria-labelledby="animalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="animalModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="container">
                    <div class="row no-gutters">
                        <div class="col-4">
                            <div class="row no-gutters">
                                <div class="col-12">
                                    <div id="divBiologicalAspect" class="cell float-left btn btn-primary" tooltip="tooltip" data-placement="top" title="" onclick="setAnimalDetailModal('BiologicalAspect');" data-dismiss="modal" data-toggle="modal" data-target="#animalDetailModal">Biological Aspect</div>
                                </div>
                            </div>
                            <div class="row no-gutters middle">
                                <div class="col-12">
                                    <div></div>
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12">
                                    <div id="divPhysicalAspect" class="cell float-left btn btn-primary" tooltip="tooltip" data-placement="top" title="" onclick="setAnimalDetailModal('PhysicalAspect');" data-dismiss="modal" data-toggle="modal" data-target="#animalDetailModal">Physical Aspect</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="cell cell__big">
                                <img src="~/Images/CommonBird.png" />
                            </div>
